// 10. Escrever um programa fonte na Linguagem C# que calcule a média aritmética de três números entrados pelo usuário.

double valor1, valor2, valor3, media;

Console.WriteLine("insira o primeiro valor: ");
valor1 = double.Parse(Console.ReadLine());
Console.WriteLine("insira o segundo valor: ");
valor2 = double.Parse(Console.ReadLine());
Console.WriteLine("insira o terceiro valor: ");
valor3 = double.Parse(Console.ReadLine());

media = (valor1 + valor2 + valor3) / 3;

Console.WriteLine("Os valores informados foram: {0}, {1} e {2}.", valor1, valor2, valor3);
Console.WriteLine("A média aritmética dos valores informados é: {0}.", media);
            
Console.ReadKey();
}
